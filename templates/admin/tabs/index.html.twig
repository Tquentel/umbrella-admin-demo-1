{% extends "@UmbrellaAdmin/layout.html.twig" %}

{% block content %}
    <div class="row">

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Config : default</h4>
                </div>
                <div class="card-body">
                    {{ nav_start() }}
                    {{ nav_item({'label' : 'Home', 'url': '#home'}) }}
                    {{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
                    {{ nav_end() }}

                    {% verbatim %}
                    <pre>
{{ nav_start() }}
{{ nav_item({'label' : 'Home', 'url': '#home'}) }}
{{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
{{ nav_end() }}
                    </pre>
                    {% endverbatim %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Config : pills</h4>
                </div>
                <div class="card-body">
                    {{ nav_config('pills') }}
                    {{ nav_start() }}
                    {{ nav_item({'label' : 'Home', 'url': '#home'}) }}
                    {{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
                    {{ nav_end() }}

                    {% verbatim %}
                    <pre>
{{ nav_config('pills') }}
{{ nav_start() }}
{{ nav_item({'label' : 'Home', 'url': '#home'}) }}
{{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
{{ nav_end() }}
                    </pre>
                    {% endverbatim %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Config : pills / active strategy : current_route</h4>
                </div>
                <div class="card-body">
                    {{ nav_config('pills', {'active_strategy': 'current_route'}) }}
                    {{ nav_start() }}
                    {{ nav_item({'label' : 'Home', 'url': '#home'}) }}
                    {{ nav_item({'label': 'Tabs', 'route': 'app_admin_tabs_index'}) }}
                    {{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
                    {{ nav_end() }}

                    {% verbatim %}
                    <pre>
{{ nav_config('pills', {'active_strategy': 'current_route'}) }}
{{ nav_start() }}
{{ nav_item({'label' : 'Home', 'url': '#home'}) }}
{{ nav_item({'label': 'Tabs', 'route': 'app_admin_tabs_index'}) }}
{{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
{{ nav_end() }}
                    </pre>
                    {% endverbatim %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Config : advanced (see code)</h4>
                </div>
                <div class="card-body">
                    {{ nav_config('pills_justified', {
                        'active_strategy': 'current_route',
                        'nav_item' : {
                            'icon' : 'mdi mdi-check me-1',
                            'attr_link' : {
                                'class' : 'nav-link font-italic'
                            }
                        }
                    }) }}
                    {{ nav_start() }}
                    {{ nav_item({'label' : 'Home', 'url': '#home', 'icon': 'mdi mdi-home me-1', 'attr_link':  {'class': 'nav-link font-weight-bold'}}) }}
                    {{ nav_item({'label': 'Tabs', 'route': 'app_admin_tabs_index'}) }}
                    {{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
                    {{ nav_end() }}

                    {% verbatim %}
                    <pre>
{{ nav_config('pills_justified', {
    'active_strategy': 'current_route',
    'nav_item' : {
        'icon' : 'mdi mdi-check me-1',
        'attr_link' : {
            'class' : 'nav-link font-italic'
        }
    }
}) }}
{{ nav_start() }}
{{ nav_item({'label' : 'Home', 'url': '#home', 'icon': 'mdi mdi-home me-1', 'attr_link':  {'class': 'nav-link font-weight-bold'}}) }}
{{ nav_item({'label': 'Tabs', 'route': 'app_admin_tabs_index'}) }}
{{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
{{ nav_end() }}
                    </pre>
                    {% endverbatim %}
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Config : bordered</h4>
                </div>
                <div class="card-body">
                    {{ nav_config('bordered') }}
                    {{ nav_start() }}
                    {{ nav_item({'label' : 'Home', 'url': '#home'}) }}
                    {{ nav_item({'label' : 'Profile', 'url': '#profile', 'active' : true}) }}
                    {{ nav_end() }}

                    {% verbatim %}
                    <pre>
{{ nav_config('bordered') }}
{{ nav_start() }}
{{ nav_item({'label' : 'Home', 'url': '#home'}) }}
{{ nav_item({'label' : 'Profile', 'url': '#profile', 'active' : true}) }}
{{ nav_end() }}
                    </pre>
                    {% endverbatim %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Config : pills / active strategy : first</h4>
                </div>
                <div class="card-body">
                    {{ nav_config('pills', {'active_strategy': 'first'}) }}
                    {{ nav_start() }}
                    {{ nav_item({'label' : 'Home', 'url': '#home'}) }}
                    {{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
                    {{ nav_end() }}

                    {% verbatim %}
                    <pre>
{{ nav_config('pills', {'active_strategy': 'first'}) }}
{{ nav_start() }}
{{ nav_item({'label' : 'Home', 'url': '#home'}) }}
{{ nav_item({'label' : 'Profile', 'url': '#profile'}) }}
{{ nav_end() }}
                    </pre>
                    {% endverbatim %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Config : pills / active strategy : manual</h4>
                </div>
                <div class="card-body">
                    {{ nav_config('pills', {'active_strategy': null}) }}
                    {{ nav_start() }}
                    {{ nav_item({'label' : 'Home', 'url': '#home'}) }}
                    {{ nav_item({'label' : 'Profile', 'url': '#profile', 'active': true}) }}
                    {{ nav_end() }}

                    {% verbatim %}
                    <pre>
{{ nav_config('pills', {'active_strategy': null}) }}
{{ nav_start() }}
{{ nav_item({'label' : 'Home', 'url': '#home'}) }}
{{ nav_item({'label' : 'Profile', 'url': '#profile', 'active': true}) }}
{{ nav_end() }}
                    </pre>
                    {% endverbatim %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}